# Copy this file to .env and fill in as needed.
# These values are only read from environment variables at runtime.

# SMTP (for Kindle delivery)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
# Set the password only in your local .env or CI secret, NEVER commit real secrets.
SMTP_PASS=

# Kindle
KINDLE_TO_EMAIL=
KINDLE_FROM_EMAIL=

# PodcastIndex API (optional for ingestion)
PODCASTINDEX_API_KEY=
PODCASTINDEX_API_SECRET=

# State directory (optional override)
PODCAST_STATE_DIR=

# Cloud providers (optional)
AWS_TRANSCRIBE_S3_BUCKET=
AWS_REGION=
GOOGLE_APPLICATION_CREDENTIALS=

